<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>org.apache.tiles.definition.DefinitionsFactory.DEFINITIONS_CONFIG</param-name>
        <param-value>/WEB-INF/config/tiles.xml</param-value>
    </context-param>
    <context-param>
        <param-name>VALID_USER_SESSION_NAME</param-name>
        <param-value>USER_ID</param-value>
    </context-param>
    <context-param>
        <param-name>CLEAR_SESSION_CLASS</param-name>
        <param-value>qa.com.qic.common.action.LogoutAction</param-value>
    </context-param>
    <filter>
        <filter-name>struts2</filter-name>
        <filter-class>org.apache.struts2.dispatcher.filter.StrutsPrepareAndExecuteFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>struts2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <listener>
        <listener-class>org.apache.struts2.tiles.StrutsTilesListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>ApplicationStartUp</servlet-name>
        <servlet-class>qa.com.qic.common.util.ApplicationStartUp</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>ShowDmsImageServlet</servlet-name>
        <url-pattern>/ShowDmsImageServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>720</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>EmailEventRecorder</servlet-name>
        <servlet-class>qa.com.qic.common.action.EmailEventRecorder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowImage</servlet-name>
        <servlet-class>qa.com.qic.common.util.ShowImage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowDmsImageServlet</servlet-name>
        <servlet-class>qa.com.qic.common.util.ShowDmsImageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmailEventRecorder</servlet-name>
        <url-pattern>/p</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailEventRecorder</servlet-name>
        <url-pattern>/r</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowImage</servlet-name>
        <url-pattern>/ShowImage</url-pattern>
    </servlet-mapping>
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>
    <servlet>
        <servlet-name>WS_CRM_APP</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>qa.com.qic.crm.restapi.controller.CrmApplication</param-value>
        </init-param>
        <init-param> 
            <param-name>jersey.config.server.disableMoxyJson</param-name> 
            <param-value>true</param-value> 
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>WS_CRM_APP</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>/index.jsp</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>Doha Datasource</description>
        <res-ref-name>jdbc/crm_doha</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Oman Datasource</description>
        <res-ref-name>jdbc/crm_oman</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Dubai Datasource</description>
        <res-ref-name>jdbc/crm_dubai</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Kuwait Datasource</description>
        <res-ref-name>jdbc/crm_kwt</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Beema Datasource</description>
        <res-ref-name>jdbc/crm_beema</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Medical Datasource</description>
        <res-ref-name>jdbc/crm_med</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
    <resource-ref>
        <description>Medical Oman Datasource</description>
        <res-ref-name>jdbc/crm_med_oman</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>
